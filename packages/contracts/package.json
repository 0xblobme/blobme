    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#v1.8.2",
    "solhint": "^3.3.7"
  }
}
